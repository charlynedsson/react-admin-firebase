    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.x",
    "@types/path-browserify": "^1.0.3",
    "jest": "^29.x",
    "microbundle": "^0.15.1",
    "prettier": "^3.x",
    "prettier-plugin-organize-imports": "^4.1.0",
    "ts-jest": "^29.x",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.x",
